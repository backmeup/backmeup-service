<mappings xmlns="http://dozer.sourceforge.net" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

	<mapping>
		<class-a>org.backmeup.model.spi.PluginDescribable</class-a>
		<class-b>org.backmeup.model.dto.PluginDTO</class-b>
		
		<field>
			<a get-method="getId">id</a>
			<b>pluginId</b>
		</field> 
		<field>
			<a get-method="getTitle">title</a>
			<b>title</b>
		</field> 
		<field>
			<a get-method="getDescription">description</a>
			<b>description</b>
		</field>
		<field>
			<a get-method="getType">type</a>
			<b>pluginType</b>
		</field>
		<!-- 
		<field>
			<a get-method="getMetadata">metadata</a>
			<b>metadata</b>
		</field>
		 -->
		 <field>
			<a get-method="getImageURL">imageURL</a>
			<b>imageURL</b>
		</field>
	</mapping>
	
	<mapping>
		<class-a>org.backmeup.model.PluginConfigInfo</class-a>
		<class-b>org.backmeup.model.dto.PluginDTO</class-b>
	</mapping>
	
	<mapping>
		<class-a>org.backmeup.model.PluginConfigInfo</class-a>
		<class-b>org.backmeup.model.dto.PluginConfigurationDTO</class-b>
		<field>
			<a>oAuthProperties</a>
			<b>properties</b>
		</field>
	</mapping>
	
	<mapping>
		<class-a>org.backmeup.model.AuthRequest</class-a>
		<class-b>org.backmeup.model.dto.PluginConfigurationDTO</class-b>
	</mapping>
	
	<mapping>
		<class-a>org.backmeup.model.api.RequiredInputField</class-a>
		<class-b>org.backmeup.model.dto.PluginInputFieldDTO</class-b>
	</mapping>
	
	<mapping>
		<class-a>org.backmeup.model.Profile</class-a>
		<class-b>org.backmeup.model.dto.PluginProfileDTO</class-b>
		
		<field>
			<a>id</a>
			<b>profileId</b>
		</field>
		
		<field>
			<a>type</a>
			<b>profileType</b>
		</field> 
	</mapping>
	
	<mapping>
		<class-a>org.backmeup.model.AuthData</class-a>
		<class-b>org.backmeup.model.dto.AuthDataDTO</class-b>
		
		<field>
			<a get-method="getId" set-method="setId">id</a>
			<b>id</b>
		</field> 
		<field>
			<a get-method="getName" set-method="setName">name</a>
			<b>name</b>
		</field>
		<field>
			<a>properties</a>
			<b>properties</b>
		</field> 
	</mapping>
</mappings> 