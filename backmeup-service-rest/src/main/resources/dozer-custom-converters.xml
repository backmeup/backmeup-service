<mappings xmlns="http://dozer.sourceforge.net" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

	<configuration>
		<!-- Note, these are always bi-directional -->
		<custom-converters> 		
			<converter type="org.backmeup.rest.converters.BackupJobFrequencyConverter">
				<class-a>java.lang.String</class-a>
				<class-b>org.backmeup.model.dto.BackupJobDTO.JobFrequency</class-b>
			</converter>
			
			<converter type="org.backmeup.rest.converters.BackupJobStatusConverter">
				<class-a>org.backmeup.model.constants.BackupJobStatus</class-a>
				<class-b>org.backmeup.model.dto.BackupJobDTO.JobStatus</class-b>
			</converter>
		</custom-converters>
	</configuration>
	
</mappings> 